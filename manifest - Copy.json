{
  "name": "Triburile Depozit Premium",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  
  "permissions": [
    "activeTab",
	"scripting"	
  ],
  
   "content_scripts": [
    {
	
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  
 
  
  "host_permissions": [
    "https://ro101.triburile.ro/*"
  ]
}
